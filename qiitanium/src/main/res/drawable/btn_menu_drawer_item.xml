<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/drawer_menu_item_pressed"/>
            <size android:width="@dimen/drawer_menu_icon_size"
                  android:height="@dimen/drawer_menu_icon_size"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/drawer_menu_item_selected"/>
            <size android:width="@dimen/drawer_menu_icon_size"
                  android:height="@dimen/drawer_menu_icon_size"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/drawer_menu_item"/>
            <size android:width="@dimen/drawer_menu_icon_size"
                  android:height="@dimen/drawer_menu_icon_size"/>
        </shape>
    </item>
</selector>
